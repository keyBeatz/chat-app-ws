<div class="chatConversations">
    <ul n:if="!empty($conversations)">
        {foreach $conversations as $conversation}
        <li n:class="$activeConversationId == $conversation->conversation->id ? active, !$activeConversationId && $iterator->isFirst() ? active, conversation" data-conversation_id="{$conversation->conversation->id}">
            <a href="{plink switchConversation! conversationId => $conversation->conversation->id}">
                <div class="avatar"></div>
                <span class="lastMessageText">
                    {$conversation->conversation->lastMessage->text}
                </span>
            </a>
        </li>
        {/foreach}
    </ul>
</div>
